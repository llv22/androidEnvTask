<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SolidActionBar" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle" tools:ignore="NewApi">@style/Widget.AppCompat.ActionBar.Solid</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/Widget.AppCompat.ActionBar.Solid</item>
        <item name="logo">@drawable/ic_action_bar</item>
    </style>
    <style name="SolidActionBar.Gameplay" parent="SolidActionBar">
        <item name="android:windowBackground">@color/game_background</item>
    </style>
    <style name="SolidActionBar.Gameplay.FullScreen" parent="SolidActionBar.Gameplay">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="GameChooserItem">
        <item name="android:background">@android:drawable/list_selector_background</item>
    </style>
    <style name="ChooserItemName" parent="@android:style/TextAppearance.Medium" />
    <style name="Dialog.Completed" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="Button.Completed" parent="@android:style/Widget.Button" />
    <style name="TextAppearance.Completed.Title" parent="@android:style/TextAppearance.Large">
        <item name="android:fontFamily" tools:ignore="NewApi">sans-serif-condensed</item>
    </style>
</resources>
